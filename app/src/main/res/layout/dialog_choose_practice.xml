<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Chủ đề: "
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_topicname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Gia đình"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Đã vượt qua:"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_pass_rate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0/3"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="20dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btn_dang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"

        android:background="@drawable/background_btn_gray_corner"
        android:text="Dạng 1"/>
    <Button
        android:id="@+id/btn_dang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
       android:layout_marginLeft="10dp"
        android:background="@drawable/background_btn_gray_corner"
        android:text="Dạng 2"/>
    <Button
        android:id="@+id/btn_dang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:background="@drawable/background_btn_gray_corner"
        android:text="Dạng 3"/>
</LinearLayout>

</LinearLayout>