<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.RegisterActivity">

    <FrameLayout
        android:id="@+id/frameRegister1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginRight="32dp"
                android:background="@drawable/edit_text_login_info"
                android:gravity="center"
                android:hint="Họ tên bạn là gì?"
                android:textColor="#000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginRight="32dp"
                android:background="@drawable/edit_text_login_info"
                android:gravity="center"
                android:hint="Đại chỉ email của bạn?"
                android:textColor="#000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginRight="32dp"
                android:background="@drawable/edit_text_login_info"
                android:gravity="center"
                android:hint="Mật khẩu của bạn?"
                android:textColor="#000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:background="@drawable/button_login"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAllCaps="false"
                android:text="Đăng kí"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/btn_login_fb"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_login_fb"
                    android:drawableLeft="@drawable/logofb"
                    android:paddingLeft="10dp"
                    android:text="FaceBook"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btn_login_gg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_fb"
                    android:drawableLeft="@drawable/logogg"
                    android:paddingLeft="10dp"
                    android:text="Google"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameRegister2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>