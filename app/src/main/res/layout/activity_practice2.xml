<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="#FFF"
    tools:context=".Activity.Practice2Activity">
    <LinearLayout
        android:layout_weight="1"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageButton
            android:id="@+id/btn_cancel"
            android:src="@drawable/ic_action_cancle"
            android:background="#FFF"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/progress"
            android:progressDrawable="@drawable/custom_progessbar"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:progress="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:text="Đọc câu này"
            android:textSize="24sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_read_sen"
            android:textColor="#065009"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Good morning, how are you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginVertical="50dp"
            android:id="@+id/img_micro"
            android:layout_gravity="center"
            android:src="@drawable/ic_microphone"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tv_read_answer"
            android:textColor="#065009"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Đáp án của bạn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_notify"
            android:text="Đáp án đúng"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_check"
            android:text="Kiểm tra"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_continue"
            android:text="Tiếp tục"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

</LinearLayout>